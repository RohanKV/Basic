5. Write a function to compare 2 numbers and test it.
#include<stdio.h>
int input()
{
  int a;
  printf(" \n Enter the number: ");
  scanf("%d",&a);
  return a;
}

int compute(int x, int y)
{
  int r;
  r = x>y ? x:y ;
  return r;
}

int output(int r)
{
    printf("\n The greater number is: %d", r);
}

void main()
{
  int a,b,result;
  a = input();
  b = input();
  result = compute(a,b);
  output(result);
}

*********************************************************
6. Write a function to compare 3 numbers and test it.
#include<stdio.h>
int input()
{
  int a;
  printf(" \n Enter the number: ");
  scanf("%d",&a);
  return a;
}

int compute(int x, int y, int z)
{
  int r, p;
  r = x>y ? x:y ;
  p = r>z ? r:z ;
  return p;
}

int output(int r)
{
    printf("\n The greater number is: %d", r);
}

void main()
{
  int a,b,c,result;
  a = input();
  b = input();
  c = input();
  result = compute(a,b,c);
  output(result);
}

